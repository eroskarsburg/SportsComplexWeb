<section class="py-0" id="carousel">
    <div id="soccerCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < carouselItems.Count; i++)
            {
                <button type="button" data-bs-target="#soccerCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
            }
        </div>
        <div class="carousel-inner">
            @foreach (var item in carouselItems.Select((value, index) => new { value, index }))
            {
                <div class="carousel-item @(item.index == 0 ? "active" : "")">
                    <img src="@item.value.ImageUrl" class="d-block w-100" alt="@item.value.AltText" style="height: 600px; object-fit: cover;">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="fw-bold">@item.value.Title</h3>
                        <p>@item.value.Description</p>
                        <a href="@item.value.ButtonLink" class="btn btn-success mb-3">@item.value.ButtonText</a>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#soccerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#soccerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

