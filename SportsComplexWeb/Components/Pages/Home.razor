<!-- Hero Section -->
<section class="position-relative">
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <div class="position-relative" style="height: 500px;">
        <img src="https://images.wallpaperscraft.com/image/single/football_field_lawn_gate_115238_2560x1440.jpg" alt="Soccer Stadium" class="w-100 h-100 object-fit-cover" />
    </div>
    <div class="container position-absolute top-0 start-0 end-0 bottom-0 d-flex flex-column justify-content-center text-white">
        <h1 class="display-4 fw-bold mb-3">
            Complexo Esportivo
        </h1>
        <p class="lead mb-4 text-white-50 col-md-8 col-lg-10">
            Bem-vindo ao Complexo Esportivo [Nome] — o lugar onde a paixão pelo futebol ganha vida!
            Com infraestrutura moderna, campos de alta qualidade e ambiente acolhedor, nosso complexo foi projetado para atletas de todas as idades e níveis. 
            Aqui, cada treino e cada partida são oportunidades para evoluir, competir e viver o verdadeiro espírito do esporte. 
            Venha fazer parte dessa história!
        </p>
        <div class="d-flex flex-column flex-sm-row gap-2">
            <a href="#" class="btn btn-success btn-lg">Shop Now</a>
            <a href="#" class="btn btn-outline-light btn-lg">View Teams</a>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-6 fw-bold">Featured Products</h2>
            <p class="text-muted mx-auto" style="max-width: 700px;">
                Check out our most popular soccer merchandise and fan favorites
            </p>
        </div>
        <div class="row g-4">
            @foreach (var product in products)
            {
                <div class="col-sm-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="position-relative">
                            <img src="@product.Image" alt="@product.Name" class="card-img-top" style="height: 200px; object-fit: cover;" />
                            @if (product.IsNew)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-success m-2">New</span>
                            }
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">@product.Category</small>
                                <div class="d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gold" class="bi bi-star-fill me-1" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <small class="fw-bold">@product.Rating</small>
                                </div>
                            </div>
                            <h5 class="card-title">@product.Name</h5>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold">$@product.Price.ToString("F2")</span>
                                <button class="btn btn-sm btn-outline-success">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-5">
            <a href="#" class="btn btn-success btn-lg">View All Products</a>
        </div>
    </div>
</section>

<!-- Testimonials -->
